{
    "name": "atlas-setup",
    "version": "2.0.0",
    "private": true,
    "description": "Centralized setup and dependency management for ATLAS v2.0",
    "scripts": {
        "dev": "vite --config configs/vite.web.ts ../apps/web",
        "build:web": "vite build --config configs/vite.web.ts ../apps/web",
        "typecheck": "tsc -p configs/tsconfig.base.json --noEmit",
        "lint": "eslint ../apps/web/src ../packages/shared/src --config configs/.eslintrc.json",
        "audit:security": "npm run scan:secrets",
        "scan:secrets": "echo 'Scanning for secrets...'"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "zod": "^3.22.4",
        "luxon": "^3.4.4",
        "@types/luxon": "^3.4.2"
    },
    "devDependencies": {
        "vite": "^5.1.4",
        "@vitejs/plugin-react": "^4.2.1",
        "typescript": "^5.3.3",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.1",
        "autoprefixer": "^10.4.17",
        "postcss": "^8.4.35"
    }
}